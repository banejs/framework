{
  "name": "@banejs/framework",
  "version": "1.0.0-beta.5",
  "description": "BaneJS Framework",
  "scripts": {
    "test": "npm run type-check && npm run tslint && npm run jest",
    "type-check": "tsc --noEmit",
    "tslint": "tslint --project tsconfig.json --format stylish",
    "jest": "jest --coverage --detectOpenHandles",
    "build": "npm run build:clean && npm run build:types && npm run build:js",
    "build:clean": "rm -rf ./build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\"",
    "github": "npm run github:tag && npm run github:push",
    "github:tag": "git tag v$npm_package_version",
    "github:push": "git push --tags",
    "prepublish-package": "npm run test && npm run build && npm run prepublish-package:copy && npm run github",
    "prepublish-package:copy": "cp ./package.json README.md LICENSE build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/banejs/framework.git"
  },
  "keywords": [
    "banejs",
    "framework",
    "server",
    "env",
    "config",
    "router",
    "typescript"
  ],
  "author": "Anton Drobot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/banejs/framework/issues"
  },
  "homepage": "https://github.com/banejs/framework#readme",
  "devDependencies": {
    "@babel/cli": "~7.7.5",
    "@babel/core": "~7.7.5",
    "@babel/plugin-proposal-class-properties": "~7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "~7.7.4",
    "@babel/preset-env": "~7.7.6",
    "@babel/preset-typescript": "~7.7.4",
    "@types/jest": "^24.0.24",
    "@types/koa": "~2.11.0",
    "@types/koa-compose": "~3.2.5",
    "@types/lodash": "~4.14.149",
    "@types/node": "~12.12.21",
    "babel-core": "~7.0.0-bridge.0",
    "babel-jest": "~24.9.0",
    "jest": "~24.9.0",
    "tslint": "~5.20.1",
    "typescript": "~3.7.3"
  },
  "dependencies": {
    "@banejs/container": "~1.0.0-beta.0",
    "@banejs/exceptions": "~1.0.0-beta.0",
    "@banejs/logger": "~1.0.0-beta.3",
    "koa": "~2.11.0",
    "koa-compose": "~4.1.0",
    "lodash": "~4.17.15",
    "path-to-regexp": "~6.1.0"
  }
}
